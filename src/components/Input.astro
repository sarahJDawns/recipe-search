---
interface InputProps {
  id: string;
  label: string;
  placeholder: string;
  required: boolean;
  type: string;
  name: string;
}

const { id, label, placeholder, required, type, name } = Astro.props;
---

<div class="p-4 md:mb-4 md:mt-20">
  <h3 class="font-body text-text text-lg leading-6 pt-3 text-center pb-2 font-bold">{label}</>
  <input
    class="border-text border rounded-md py-2 px-4 focus:outline-none focus:ring-2 focus:ring-accent2 w-full"
    id={id}
    placeholder={placeholder}
    required={required}
    type={type}
    name={name}
  />
</div>
